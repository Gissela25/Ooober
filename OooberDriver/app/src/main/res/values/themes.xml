<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OooberDriver" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextGrey" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/GreyDark</item>
        <item name="colorControlActivated">@color/GreyDark</item>
        <item name="colorControlHighlight">@color/GreyDark</item>
        <item name="android:textColorHint">@color/GreyDark</item>
        </style>
</resources>